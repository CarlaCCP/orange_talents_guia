package controles;

import modelo.Aluno;

public class AlunoDTO {
	
	private Long id;
	private String nome;
	private String email;
	private int idade;
	
	
	public AlunoDTO (Aluno aluno) {
		this.email = aluno.getEmail();
		this.nome = aluno.getNome();
		this.id = aluno.getId();
		this.idade = aluno.getIdade();
	}
	
	
	
	public int getIdade() {
		return idade;
	}

	public Long getId() {
		return id;
	}

	public String getNome() {
		return nome;
	}
	public String getEmail() {
		return email;
	}
	
	
	

}
